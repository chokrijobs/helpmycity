{#% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %#}
{% extends '@App/loginlayout.html.twig' %}
{% block body %}
    <div class="container">
        <br><br><br>
    <div class="row">
        <div class="col-lg-6 col-md-offset-3">
            <form action="{{ path('login') }}" method="post" role="form">
                <div class="form-group input-group">
                    <span class="input-group-addon">@</span>
                    <input type="text" class="form-control" placeholder="Email" id="username" name="_email" >
                </div>
                <div class="form-group input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i> </span>
                    <input type="text" class="form-control" placeholder="Password" id="password" name="_password" >
                </div>

                {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
                #}

                <button class="btn btn-success" type="submit">login</button>
            </form>
        </div>
    </div>
    </div>
{% endblock %}