{% extends '@App/layout.html.twig' %}
{% block body %}
    {#{ dump(categories) }#}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Users</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Users List
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>UserName</th>
                            <th>Roles</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if users is defined and users|length %}
                            {% for user in users %}
                                <tr class="odd gradeX">
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.name }}</td>
                                    <td>{{ user.username }}</td>
                                    <td class="center">
                                        {% if user.roles and user.roles|length %}
                                            <ul class="list-unstyled">
                                                {% for role in user.roles %}
                                                    <li>{{ role.role }}</li>
                                                {% endfor %}
                                            </ul>
                                        {% endif %}
                                    </td>
                                    <td class="center">
                                        <ul class="list-inline">
                                            <li><a class="btn btn-info" href="{{ path('user_edit', {'username': user.username}) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Update</a> </li>
                                            {#<li><a class="btn btn-danger" href="" onclick="return confirm('Vous Ãªtes sur le point de supprimer un utilsateur ?')">Delete</a> </li>#}
                                        </ul>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
{% endblock %}